<resources>
    <style name="AppTheme" parent="Theme.AppCompat.DayNight">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="SwitchTextAppearance">
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>


<!--    folosit in activity_rides_offered.xml si activity_rides_searched.xml-->
    <style name="TextviewStyle" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/cardview_light_background</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">20dp</item>
        <item name="android:background">@color/colorPrimaryDark</item>
    </style>


<!--    pentru butonul de Edit din lv_rides_offered.xml-->
    <style name="ButtonStyle" parent="@android:style/Widget.Button">
        <item name="android:textColor">@color/cardview_light_background</item>
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">15dp</item>
    </style>

    <!--    pentru rating bar-ul de pe fragmentul dashboard (review-uri) È™i fragmentul profil-->
    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/colorAccent_faded</item>
        <item name="colorControlActivated">@color/colorAccent</item>
    </style>

    <style name="RatingBar2" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/cardview_light_background</item>
        <item name="colorControlActivated">@color/colorLightBackground</item>
    </style>

<!--    pentru listview-uri-->
    <style name="ListView" parent="@android:style/Widget.ListView">
        <item name="android:cacheColorHint">@android:color/transparent</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="fontFamily">@font/montserrat</item>
        <item name="android:textSize">18dp</item>
        <item name="android:divider">@android:color/transparent</item>
        <item name="android:dividerHeight">0dp</item>
    </style>

</resources>